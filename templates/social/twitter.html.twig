{% extends 'base.html.twig' %}

{% block title %} Twitter{% endblock %}

{% block body %}
<style>
    body {background-color: #1DA1F2; color: #FFF;}
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .post_odd { font-size: 1.25em; padding: 1em; background: #AAB8C2; color: #FFF;}
    .post_even { font-size: 1.25em; padding: 1em; background: #F5F8FA; color: #000;}
    .subtext {font-size: 0.75em;}
</style>

<div class="example-wrapper">
    <h1>Twitter Feed</h1>

    Listing tweets involving <b>{{ search_string }}</b>.<br>

    {% for stream in streams_array %}
        <div class="{{ cycle(['post_even','post_odd'], loop.index0) }} %}">
            {{ stream.text }}
            <br>
            <span class="subtext">{{ stream.created_at }} | {{ stream.user.screen_name }}</span>
        </div>
    {% endfor %}

</div>
{% endblock %}
